.container {
  background: #eee;
  box-sizing: border-box;
}
.app-title {
  position: relative;
  width: 100%;
  height: 200px;
}
.app-title .main-title {
  position: absolute;
  top: 35px;
  left: 20px;
  padding: 0 5px;
  height: 60px;
  font-size: 30px;
  font-weight: 800;
  line-height: 60px;
  color: white;
}
.app-title .sub-title {
  position: absolute;
  top: 100px;
  left: 100px;
  padding: 0 5px;
  height: 40px;
  font-size: 24px;
  font-weight: 500;
  line-height: 40px;
  vertical-align: middle;
  color: white;
}
.app-title .time-stamp {
  height: 25px;
  padding: 0 10px;
  position: absolute;
  bottom: 5px;
  left: 5px;
  font-size: 14px;
  line-height: 25px;
  color: white;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 25px 25px;
}
.card {
  width: 100%;
  margin-top: 10px;
  background: white;
  border-radius: 5px;
  overflow: hidden;
  box-shadow:  0px 5px 5px -5px #bbb,
               0px -5px 5px -5px #bbb;
}
.card .card-title {
  width: 100%;
  height: 40px;
  padding: 5px 0 5px 10px;
  font-size: 20px;
  line-height: 40px;
  vertical-align: middle;
  border-bottom: 2px solid #f0f0f0; 
}
.card .card-title::before {
  content: "1";
  width: 3px;
  height: 40px;
  margin-right: 10px;
  color: #4169e2;
  background: #4169e2;
}
.total-summary .total-summary-number {
  margin: 0 5px;
  display: flex;
  flex-direction: row;
  text-align: center;
  align-items: center;
  border-bottom: 1px solid #f1f1f1;
}
.total-summary .total-summary-number .summary-item {
  flex: 1;
  margin: 5px 0 10px 0; 
}
.total-summary .total-summary-number .summary-item .item-number {
  height: 50px;
  font-size: 28px;
  font-weight: 600;
  line-height: 50px;
}
.total-summary .total-summary-number .summary-item .item-title {
  height: 20px;
  font-size: 14px;
  line-height: 20px;
}
.total-summary .total-summary-desc {
  padding: 10px 15px;
  line-height: 1.8;
}
.total-summary .total-summary-desc .total-summary-desc-item::before {
  content: "\2726";
  font-size: 12px;
  color: red;
}
.card .double-linechart {
  width: 100%;
  height: 600px;
}
.card .single-linechart {
  width: 100%;
  height: 350px;
}
.footer {
  margin: 10px 0;
  font-size: 12px;
  color: #777;
}